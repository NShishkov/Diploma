<%= form_for(client) do |f| %>
  <% if client.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(client.errors.count, "error") %> prohibited this client from being saved:</h2>

      <ul>
      <% client.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 
  <div class="form-item col-md-12">
    <%= f.text_field :surname, placeholder: "Фамилия", :class => "form-control " %>
  </div>

  <div class="form-item col-md-12">
    <%= f.text_field :name, placeholder: "Имя", :class => "form-control " %>
  </div>

  <div class="form-item col-md-12">
    <%= f.text_field :patronymic, placeholder: "Отчество", :class => "form-control " %>
  </div>

  <div class="form-item col-md-12">
    <%= f.text_field :phone_number, placeholder: "Телефонный номер", :class => "form-control " %>
  </div>

  <div class="field">
    <%= f.hidden_field :rating %>
  </div>

  <div class="form-item col-md-12 text-left">
    <strong>Загрузите вашу фотографию:</strong>
    <%= f.file_field :photo %>
  </div>

  <div class="actions">
    <%= f.submit "Сохранить", :class => "btn btn-lg btn-success" %>
  </div>
<% end %>
