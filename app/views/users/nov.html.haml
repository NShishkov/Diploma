= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h2
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message
  = f.email_field :email, placeholder: "Email", class: "form-control"
  %br/
  = f.password_field :password, placeholder: "Пароль", class: "form-control"                            |
    <br>                                                                                                |
    <%= f.password_field :password_confirmation, placeholder: "Повторите пароль", class: "form-control" |
  %br/
  .actions
    = f.submit 'Зарегистрироваться', :class => 'btn btn-lg btn-primary btn-block btn-signin'
