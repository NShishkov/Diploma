<p id="notice"><%= notice %></p>

<div class="row">
	<div class="col-md-3 specialization no-float">
		<h3 class="text-center">Специализация</h3>
		<%= render "shared/menu" %>
	</div>
	<div class="col-md-9 no-float">
	<div class="row col-md-12 text-center"> <h3>Исполнители</h3></div>
	<% @contractors.each do |c| %>
	<div class="row">
		<div class="col-md-2"><%= image_tag c.photo.url(:thumb)%></div>
		<div class="col-md-6">
			<p><strong><%= link_to "#{c.surname} #{c.name} #{c.patronymic}", contractor_path(c.id) %></strong></p>
			<p><%= image_tag(rating(c.rating),:size => "100x20") %></p>
			<p><%= truncate(c.info, length: 100) %></p>
		</div>
		<div class="col-md-4"> <%= link_to '<i class="glyphicon glyphicon-pencil"></i> Записаться на ремонт'.html_safe, tasks_path, {:class => "btn btn-primary btn-lg"} %></div>
	</div>
	<br>

	<% end %>
	<%= paginate @contractors %>
	</div>
	<br>

</div>
